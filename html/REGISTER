import websocket
import json

# URL WebSocket server
WS_URL = "wss://chat.longapp.site/chat/chat"

def on_message(ws, message):
    print("Nhận từ server:", message)

def on_error(ws, error):
    print("Lỗi:", error)

def on_close(ws, close_status_code, close_msg):
    print("Đóng kết nối:", close_status_code, close_msg)

def on_open(ws):
    # Gửi gói tin REGISTER
    register_payload = {
        "action": "onchat",
        "data": {
            "event": "REGISTER",
            "data": {
                "user": "long",
                "pass": "12345"
            }
        }
    }
    ws.send(json.dumps(register_payload))
    print("Đã gửi yêu cầu REGISTER")

if __name__ == "__main__":
    ws = websocket.WebSocketApp(
        WS_URL,
        on_open=on_open,
        on_message=on_message,
        on_error=on_error,
        on_close=on_close
    )
    ws.run_forever()

